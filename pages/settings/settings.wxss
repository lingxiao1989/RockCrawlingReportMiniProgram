@import "../../common/lib/weui.wxss";
@import "../../common/index.wxss"; 

.page-head-title{
  display: inline-block;
  padding: 10rpx 140rpx;
  font-size: 30rpx;
  color: grey;
}
.page-head-line{
  margin: 0 auto;
  width: 500rpx;
  height: 2rpx;
  background-color: grey;
}

.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}
.button-area{
  padding-top: 70rpx;
  
}
button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.confirm-btn {
  font-size: 13pt;
  line-height: 85rpx;
  height: 85rpx;
  background: #314C6D;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 20rpx 3%;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
  flex:1;
  color: #000;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #000;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}