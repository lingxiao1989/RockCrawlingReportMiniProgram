@import "../templates/item-template.wxss";

Page {
  /* background: #1baceb; */
  position: absolute;
  font-size: 36rpx;
  width: 100%;
  height: 100%;
  display: block;
  background: #FAFAFA;
  overflow-y: hidden;
}

.filter-group{
  padding:10rpx 10rpx;
  margin-bottom: 8rpx;
}
.radio{
  line-height:0;
  font-size:30rpx;
  zoom:0.8
}
.more-filter{
  position: relative;
  color:#fff;
  font-size:30rpx;
  height:50rpx;
  text-align: center;
  border-radius: 5px;
  background: #1AAD19;
  border: #fff solid thin;
  padding-top:5rpx;
}
.more-filter-show{
  position: relative;
  color:#000;
  font-size:30rpx;
  height:50rpx;
  text-align: center;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  background: #fff;
  border: #000 solid thin;
  padding-top:5rpx;
}

.pull-down-image {
  position: absolute;
  top:10rpx;
  right:10px;
  width: 40rpx;
  height: 40rpx;
}
.search-history-box {
  border-left: 1px solid #1AAD19;
  border-right: 1px solid #1AAD19;
  border-bottom: 1px solid #1AAD19;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  max-height: 50%;  
  position: fixed;
  z-index: 999;
  margin-top: 106rpx;
  left: 10px;
  right:10px;
  top:0;
  overflow-y: scroll;
}
.search-history {
 font-size: 30rpx; 
 line-height: 34px; 
 color: #575757; 
 height: 34px; 
 display: block; 
 padding-left: 30px; 
 background-color: #fff; 
 border-bottom: 1px solid #dbdbdb; 
}
.clear-search-history{
  text-align:center;
  color:#1AAD19;
  font-size:15px;
  background:#fff;
  line-height: 34px;
}
search-history.highlight { 
 background-color: #f4f4f4; 
 color: #48c23d; 
} 
.filter-box {
  border: 1px solid #000;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  max-height: 45%;  
  position: fixed;
  z-index: 999;
  margin-top: 236rpx;
  left: 10px;
  right:10px;
  top:0;
  overflow-y: scroll;
}
.custom-filter {
  position: relative;
  font-size: 30rpx; 
  line-height: 60rpx; 
  color: #000; 
  height: 60rpx; 
  display: block; 
  padding-left: 20px; 
  background-color: #fff; 
  border-bottom: 1px solid #000; 
}
.custom-filter-name{
  position: absolute;
  width:580rpx;
  white-space:nowrap;
}
.side-image {
  position: absolute;
  right:0;
  width: 30rpx;
  height: 30rpx;
  padding:16rpx 10px;
}
.add-filter{
  position:relative;
  
  text-align:center;
  color:#000;
  font-size:30rpx;
  background:#fff;
  line-height: 60rpx;
  height: 60rpx;
}
.hidden_tip{
  font-size: 9pt;
  line-height: 100%;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: #1AAD19;
  color: #fff;
  opacity: 0;
}
.hidden_tip.disabled{
  font-size: 9pt;
  line-height: 100%;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: #1AAD19;
  color: #fff;
  opacity: 1;
}



.fix_tip_relative{
    position: relative;
    bottom: 20pt;
    left: 0;
    width: 100%;
    text-align: center;
    opacity: 1;
    transform: translate3d(0, 80rpx, 0);
    transition: all .4s cubic-bezier(0.19, 1, 0.22, 1);
    color: #fff;
}